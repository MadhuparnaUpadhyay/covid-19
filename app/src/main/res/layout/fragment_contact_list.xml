<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    card_view:cardCornerRadius="3dp"
    card_view:cardElevation="10dp"
    card_view:cardMaxElevation="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:padding="@dimen/text_margin">

        <TextView
            android:id="@+id/state"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="state"
            android:textAppearance="?attr/textAppearanceListItem"
            android:textColor="@android:color/black"
            android:textSize="20dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:drawableStart="@drawable/ic_emergency_ambulance_svgrepo_com"
                android:drawablePadding="10dp"
                android:text="Ambulance:"
                android:textAppearance="?attr/textAppearanceListItem"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/ambulance"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:autoLink="phone"
                android:drawableRight="@drawable/ic_call_black_24dp"
                android:linksClickable="true"
                android:text="102"
                android:textAppearance="?attr/textAppearanceListItem"
                android:textColor="@android:color/black" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:drawableStart="@drawable/ic_whatshot_black_24dp"
                android:drawablePadding="10dp"
                android:text="Fire:"
                android:textAppearance="?attr/textAppearanceListItem"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/fire"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="101"
                android:autoLink = "phone"
                android:textAppearance="?attr/textAppearanceListItem"
                android:textColor="@android:color/black" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:drawableLeft="@drawable/ic_iconmonstr_police_1"
                android:drawablePadding="10dp"
                android:text="Police:"
                android:textAppearance="?attr/textAppearanceListItem"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/police"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="100"
                android:autoLink = "phone"
                android:textAppearance="?attr/textAppearanceListItem"
                android:textColor="@android:color/black" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:drawableLeft="@drawable/ic_headphones_with_microphone"
                android:drawablePadding="10dp"
                android:text="Helpline:"
                android:textAppearance="?attr/textAppearanceListItem"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/help_line"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:autoLink="phone"
                android:textColorLink="@color/colorAccent"
                android:text=""
                android:textAppearance="?attr/textAppearanceListItem"
                android:textColor="@android:color/black" />
        </LinearLayout>


    </LinearLayout>
</androidx.cardview.widget.CardView>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@android:color/white"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="10dp">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:text="Active:"
            android:textColor="@color/textColorStatActive"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/city_active"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="20"
            android:textColor="@color/textColorStatActive"
            android:textSize="15dp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginTop="@dimen/text_margin"
        android:layout_marginBottom="@dimen/text_margin"
        android:gravity="left"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recovered:"
            android:textColor="@color/textColorStatRecovered"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/city_recovered"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/text_margin"
            android:layout_marginRight="@dimen/text_margin"
            android:gravity="center"
            android:text="20"
            android:textColor="@color/textColorStatRecovered"
            android:textSize="15dp"
            android:textStyle="bold" />

        <live.combatemic.app.Common.CustomTextView
            android:id="@+id/today_recovered"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_arrow_upward_black_24dp"
            android:text=""
            android:textColor="@color/textColorStatRecovered"
            android:textSize="11dp"
            app:drawableTint="@color/textColorStatRecovered" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:gravity="left"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Death:"
            android:textColor="@color/textColorStatDeath"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/city_death"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/text_margin"
            android:layout_marginRight="@dimen/text_margin"
            android:gravity="center"
            android:text="20"
            android:textColor="@color/textColorStatDeath"
            android:textSize="15dp"
            android:textStyle="bold" />

        <live.combatemic.app.Common.CustomTextView
            android:id="@+id/today_death"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_arrow_upward_black_24dp"
            android:text=""
            android:textColor="@color/textColorStatDeath"
            android:textSize="11dp"
            app:drawableTint="@color/textColorStatDeath" />
    </LinearLayout>

</LinearLayout>

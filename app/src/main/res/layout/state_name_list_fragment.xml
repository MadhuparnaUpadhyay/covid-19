<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginRight="10dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:background="@drawable/state_circle"
        android:gravity="center"
        android:orientation="horizontal">

        <live.combatemic.app.Common.CustomTextView
            android:id="@+id/state_confirmed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawableLeft="@drawable/ic_arrow_upward_black_24dp"
            app:drawableTint="@color/textColorStatConfirmed"
            android:gravity="center"
            android:text=""
            android:textColor="@android:color/white" />
    </LinearLayout>

    <TextView
        android:id="@+id/state_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:text=""
        android:textStyle="bold"
        android:textSize="16dp"
        android:textColor="@color/colorBackground" />

</LinearLayout>